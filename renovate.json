{
    "platformAutomerge": true,
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "helpers:pinGitHubActionDigests"],
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "description": "Automerge updates",
        "matchUpdateTypes": ["major", "minor", "patch"],
        "automerge": true
      }
    ],
    "includeForks": true
  }